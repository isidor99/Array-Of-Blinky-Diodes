void exitWithError(const char* err) {
	perror(err);
	exit(1);
}

void writeToFile(int file, const char* message, const char* err) {
	if (write(file, message, strlen(message)) != strlen(message))
		exitWithError(err);
}

int main() {

	// init pin
	//
	int file = open(strcat(PATH, "/export"), O_WRONLY);
	if (file == -1) exitWithError(strcat(OPEN_ERR_MSG, "/export"));

	writeToFile(file, "26", "Unable to write file /sys/class/gpio/export");

	// set pin direction
	//

	return 0;
}
